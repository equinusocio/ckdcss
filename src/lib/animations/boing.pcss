@import '../../configs/_variables.config';
@import '../../configs/_base.config';

[data-ckd='boing'] {
  &:checked,
  &[aria-checked='true'] {
    animation: boing 0.2s $standard-curve 3;
  }
}

@keyframes boing {
  0% {
    transform: translateY(3px) scaleY(0.8);
  }

  50% {
    transform: translateY(-10px);
  }

  90% {
    opacity: 0.7;
    transform: translateY(2px) scale(1.5, 0.5);
  }
}
