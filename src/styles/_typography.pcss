h1,
h2,
h3 {
  font-weight: 300;
}

h1 {
  font-size: responsive 32px 42px;
  font-range: 320px 1440px;
}

h2 {
  font-size: responsive 28px 36px;
  font-range: 320px 1440px;
}

h3 {
  font-size: responsive 22px 28px;
  font-range: 320px 1440px;
  font-weight: 500;
}

p {
  font-size: responsive 20px 22px;
  font-range: 320px 1440px;
  line-height: responsive 30px 40px;
  line-height-range: 420px 1440px;
}

.Subtitle {
  font-weight: 300;
  letter-spacing: 0.4px;
}
